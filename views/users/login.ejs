<% layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <div class="col-6 offset-3">
             <h1>Login</h1>
            <form action="/login" method="POST">
                <div class="mb-3">
                    <label class="needs-validation" for="username" novalidate>Username:</label>
                    <input name="username" id="username" type="text" class="form-control" required/>
                </div>
                <div class="mb-3">
                    <label class="needs-validation" for="password" novalidate>Password:</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
                <div><button class="btn btn-success">Login</button></div>
            </form>
        </div>
    </div>