<% layout("/layouts/boilerplate")%>

    <div class="row mt-3">
        <div class="col-6 offset-3">
             <h1>SignUp on WanderLust</h1>
            <form action="/signup" method="POST">
                <div class="mb-3">
                    <label class="needs-validation" for="username" novalidate>Username:</label>
                    <input name="username" id="username" type="text" class="form-control" required/><div class="valid-feedback">looks good</div>
                </div>
                <div class="mb-3">
                    <label class="needs-validation" for="email" novalidate>Email:</label>
                    <input name="email" id="email" type="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="needs-validation" for="password" novalidate>Password:</label>
                    <input name="password" id="password" type="password" class="form-control" required>
                </div>
                <div><button class="btn btn-success">submit</button></div>
            </form>
        </div>
    </div>